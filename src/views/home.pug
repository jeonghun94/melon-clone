extends base

block content
    for song in songs 
        div(style="display:flex; justify-content: space-between; align-items: center; margin: 10px 0; padding:10px;")
            div(style="display:flex; justify-content: center; align-items: center;")
                img(src=song.albumCover, style="width: 50px; height: 50px; margin-right: 10px; ")
                div(style="display:flex; flex-direction: column; justify-content: center; align-items: flex-start;")
                    h1 #{song.title}
                    p(style="font-size:1rem; color:#c8c8c8;") #{song.artist}
            span #{song.count}